<%- include('header.ejs')%>

<ul>
<% myCollection.forEach(pokemon => { %>

<li>
    <h3>Name: <%= pokemon.name %></h3>
    <h4>Height: <%= pokemon.height %></h4>
    <img src="<%= pokemon.photo %>">
    <form action="/deletePokemon/<%= pokemon.id %>" method="POST">
        <input type="submit" value="Delete Pokemon">
    </form>
    <form action="/editPokemon/<%= pokemon.id %>" method="POST">
        <label for="name">Edit Name: </label>
        <input type="text" id="name" name="name" value="<%= pokemon.name %>">
        <input type="submit" value="Edit Pokemon">
    </form>
</li>

<% }) %>
</ul>

<%- include('footer.ejs')%>
